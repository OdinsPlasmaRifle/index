{
  "name": "comic-index",
  "version": "1.0.0",
  "description": "Comic Book Index - Desktop app for indexing and browsing a local comic book collection",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
